alias reload='source ~/.bash_profile'

alias vi='vim'
alias svi='sudo vim -u ~/.vimrc'

function gitdots(){

    if [ ! -d ~/.dotfiles ]; then
       md ~/.dotfiles 
    fi
    
    
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.dotfiles/.vimrc > ~/.vimrc
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.dotfiles/.bash_profile > ~/.bash_profile
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.dotfiles/.bash_files > ~/.dotfiles/.bash_files
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.dotfiles/.bash_history > ~/.dotfiles/.bash_history
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.dotfiles/.bash_prompt > ~/.dotfiles/.bash_prompt
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.dotfiles/.bash_share > ~/.dotfiles/.bash_share

}

function sf(){
    find . -type f -exec grep -l $1 {} + ;
}

# Add to grep: color, line numbers
alias grep="grep --color -n "


