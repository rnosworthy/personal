alias reload='source ~/.bash_profile'

alias vi='vim'

function gitbash(){

    if [ ! -d ~/.dotfiles ]; then
       md ~/.dotfiles 
    fi
    
    cd ~

    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.bash_profile > ~/.bash_profile
    
    cd .dotfiles

    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.bash_files > ~/.dotfiles/.bash_files
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.bash_history > ~/.dotfiles/.bash_history
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.bash_prompt > ~/.dotfiles/.bash_prompt
    wget -q -O - "$@" https://raw.github.com/rnosworthy/personal/master/.bash_share > ~/.dotfiles/.bash_share

}

# Add to grep: color, line numbers
alias grep="grep --color -n "

export PATH="$PATH:/usr/local/bin/"
export PATH="/usr/local/git/bin:/sw/bin/:/usr/local/bin:/usr/local/:/usr/local/sbin:/usr/local/mysql/bin:$PATH"

